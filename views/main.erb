<h1>Volunteer Tracker</h1>

<form action="/projects" method="post">
  <div class="form-group">
    <label for="title">Add a new project:</label>
    <input id="n" name="title" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Create Project</button>
</form>
<br>

<% if @projects.any? %>
  <div class="row">
      <% @projects.each do |project| %>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
          <h4 class="card-title"><a href="/projects/<%= project.id %>"><%= project.title %></a></h4>
          <h5><b>Volunteers:</b></h5>
            <% if project.volunteers.any?%>  
              <% project.volunteers.each do |volunteer| %>
              <ul>
              <h5><%= volunteer.name %></h5>
              </ul>
              <%end%>
            <%end%>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p>There are currently no projects to display.</p>
<% end %>
